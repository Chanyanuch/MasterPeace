@model Thammapirom.Models.RegisterModel
@{
    ViewBag.Title = "สมัครสมาชิก";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="featured">
    <div class="content-wrapper" style="min-height: 200px; ">

        <table class="table" style="width: 500px; height: 200px; background-color: rgba(255, 255, 255, 0.90); margin-left: auto; margin-right: auto;">
            <tr>
                <td style="padding-left: 30px; padding-top: 30px;">
                    <hgroup class="title" style="text-align:center;">
                        <h1 style="color: rgb(25, 25, 25)">@ViewBag.Title.</h1>
                    </hgroup>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <fieldset>
                            <legend>Registration Form</legend>
                            <ol>
                                <li>
                                    @Html.LabelFor(m => m.UserName)
                                    @Html.TextBoxFor(m => m.UserName)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.Password)
                                    @Html.PasswordFor(m => m.Password)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.ConfirmPassword)
                                    @Html.TextBoxFor(m => m.ConfirmPassword)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email)
                                </li>
                            </ol>
                            <input type="submit" value="Register" />
                        </fieldset>
                    }
                </td>
            </tr>
        </table>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
