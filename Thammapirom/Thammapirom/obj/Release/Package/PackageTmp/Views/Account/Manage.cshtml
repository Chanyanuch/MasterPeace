@model Thammapirom.Models.LocalPasswordModel
@{
    ViewBag.Title = "แก้ไขข้อมูลสมาชิก";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p class="message-success">@ViewBag.StatusMessage</p>


<section class="featured">
    <div class="content-wrapper" style="min-height: 200px;">

        <table class="table" style="width: 500px; height: 200px; background-color: rgba(255, 255, 255, 0.90); margin-left: auto; margin-right: auto;">
            <tr>
                <td style="padding-left: 30px; padding-top: 30px;">
                    <hgroup class="title" style="text-align: center;">
                        <h1 style="color: rgb(25, 25, 25)">@ViewBag.Title.</h1>
                    </hgroup>


                    @if (ViewBag.HasLocalPassword)
                    {
                        @Html.Partial("_ChangePasswordPartial")
                    }
                    else
                    { 
                        @Html.Partial("_SetPasswordPartial")
                    }
                </td>
            </tr>
        </table>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
