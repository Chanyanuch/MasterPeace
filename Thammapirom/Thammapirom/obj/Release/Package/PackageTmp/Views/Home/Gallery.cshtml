@model IEnumerable<Thammapirom.Models.GalleryImage>
@{
    ViewBag.Title = "แกลอรี่";
    Layout = "~/Views/Shared/_Layout.cshtml";   
}
<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<style>
    ul.row {
        padding: 0 0 0 0;
        margin: 0 0 0 0;
    }

        ul.row li {
            list-style: none;
            margin-bottom: 25px;
            margin-right: 35px;
        }

            ul.row li img {
                cursor: pointer;
            }
</style>
<div class="container" style="background-color: #a37045">
    <p class="welcome">แกลอรี่</p>
    <p></p>
    <ul class="row">
        @if (Request.IsAuthenticated)
        {
            foreach (var item in Model)
            {
                                               
<li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">

                @if (item.ImageData != null)
                {
<img src="@item.ImageData" width="201" height="120"/>
                }
            </li>  
               
                        
            }
        }
        else
        {
            <p class="background">สำหรับสมาชิกเท่านั้น</p>
        }
    </ul>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(document).ready(function () {
        $('li img').on('click', function () {
            var src = $(this).attr('src');
            var img = '<img src="' + src + '" class="img-responsive"/>';
            $('#myModal').modal();
            $('#myModal').on('shown.bs.modal', function () {
                $('#myModal .modal-body').html(img);
            });
            $('#myModal').on('hidden.bs.modal', function () {
                $('#myModal .modal-body').html('');
            });
        });
    })
</script>
