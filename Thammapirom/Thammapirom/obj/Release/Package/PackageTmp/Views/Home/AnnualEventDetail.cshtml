@model Thammapirom.Models.AnnualEvent


@{
    ViewBag.Title = "รายละเอียดกิจกรรมประจำปี";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
        </hgroup>
        <table class="table" style="width: 900px; height: 380px; background-color: rgba(255, 255, 255, 0.90); margin-left: auto; margin-right: auto; font-family: Kunlasatri; font-size: 24px;">





            <tr>
                <td style="width: 200px; font-weight: bolder; padding-left: 20px;">ชื่อกิจกรรม:</td>
                <td>@Html.ValueFor(Model => Model.aEventTitle)</td>
            </tr>
            <tr>
                <td style="width: 200px; font-weight: bolder; padding-left: 20px;">วันที่จัดกิจกรรม:</td>
                <td>@Html.ValueFor(Model => Model.aEventDate)</td>
            </tr>
            <tr>
                <td style="width: 200px; font-weight: bolder; padding-left: 20px;">เวลาจัดกิจกรรม:</td>
                <td>@Html.ValueFor(Model => Model.aEventTime)</td>
            </tr>
            <tr>
                <td style="width: 200px; font-weight: bolder; padding-left: 20px;">สถานที่จัดกิจกรรม:</td>
                <td>@Html.ValueFor(Model => Model.aEventLocation)</td>
            </tr>
            <tr>
                <td style="width: 200px; font-weight: bolder; padding-left: 20px;">รายละเอียดจัดกิจกรรม:</td>
                <td>@Html.ValueFor(Model => Model.aEventDetail)</td>
            </tr>

            <tr>
                <td colspan="2">

                    <p style="text-align: right; text-decoration: underline;">@Html.ActionLink("ยกเลิกและกลับสู่หน้ากิจกรรมประจำปี", "AnnualEvent") </p>
                </td>
            </tr>


        </table>

    </div>
</section>
