<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet">
 
    <title></title>
</head>
<body>
     
     <div class="container">
        <div class="menubar">

            
                <ul class="nav nav-tabs">
                   
                    
                     @if (Session["LoginStatus"]=="True")
                     {
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "IndexManaging" ? "active" : "")">@Html.ActionLink("แก้ไขรูปภาพหน้าแรก", "IndexManaging", "Admin")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "BackgroundManaging" ? "active" : "")">@Html.ActionLink("แก้ไขประวัติ", "BackgroundManaging", "Admin")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "AnnualEventManaging" ? "active" : "")">@Html.ActionLink("แก้ไขกิจกรรมประจำปี", "AnnualEventManaging", "Admin")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "CustomEventManaging" ? "active" : "")">@Html.ActionLink("แก้ไขกิจกรรมทั่วไป", "CustomEventManaging", "Admin")</li>
                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "DhammaQAManaging" ? "active" : "")">@Html.ActionLink("ตอบคำถามกระทู้ธรรม", "DhammaQAManaging", "Admin")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GalleryManaging" ? "active" : "")">@Html.ActionLink("แก้ไขภาพในแกลอรี่", "GalleryManaging", "Admin")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ActivityClipManaging" ? "active" : "")">@Html.ActionLink("แก้ไขวิดีโอกิจกรรม", "ActivityClipManaging", "Admin")</li>
                
                   
                      
                         <li>@Html.ActionLink("ออกจากระบบ","Logout","Admin")</li>
                        
                     }else{
                     <li>@Html.ActionLink("เข้าสู่ระบบ", "Login", "Admin", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>  
                          
                     }
                          </ul>
               
        
           
        </div>

        @RenderBody()
    </div>
</body>
</html>
