@model IEnumerable<Thammapirom.Models.WelcomeImage>

@{
    ViewBag.Title = "Admin: Edit Index Page ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (Session["LoginStatus"] == "True")
{
  
    <div class="item">
        <h2>หน้าจัดการสไลด์รูปภาพ</h2>
        <br>
        <p>
            @Html.ActionLink("เพิ่มรูปภาพลงบนสไลด์", "AddWelcomeImage")
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>รูปภาพ</th>
                    <th>ส่วนจัดการ</th>
                </tr>
            </thead>
            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        @if (x.ImageData != null)
                        {
       
                            <td>
                                <img width="200" height="102" src="@x.ImageData" /></td>
                            <td>@using (Html.BeginForm("DeleteWelcomeImage", "Admin"))
                                { 
                                @Html.Hidden("ImageID", x.ImageID)
                                <input type="submit" value="ลบ" /> 
                
                                }
                            </td>
                        }
                    </tr>
                </tbody>
            }

        </table>

    </div>
}
else { }



