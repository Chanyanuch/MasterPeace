@model IEnumerable<Thammapirom.Models.AnnualEvent>
@{
    ViewBag.Title = "หน้าจัดการกิจกรรมประจำปี";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (Session["LoginStatus"] == "True")
{
    <h2>หน้าจัดการกิจกรรมประจำปี</h2>
    <p>
        @Html.ActionLink("เพิ่มกิจกรรมประจำปี", "AddAnnualEvent")
    </p>
    <style>
        table, td, th {
            border: 1px solid green;
        }

        th {
            background-color: green;
            color: white;
        }

        td {
            padding: 10px;
        }
    </style>
    <div class="item">
        <table>
            <tr>
                <th>ลำดับ</th>
                <th>ชื่อกิจกรรม</th>
                <th>รายละเอียดกิจกรรม</th>
                <th>วันที่จัดกิจกรรม</th>
                <th>เวลาจัดกิจกรรม</th>
                <th>สถานที่จัดกิจกรรม</th>

                <th colspan="2">ส่วนจัดการ</th>
            </tr>

            @foreach (var evt in Model.Reverse())
            {
                <tr>
                    @if (evt.EventID != null)
                    {
                        <td>@evt.EventID</td>
                        <td>@evt.EventTitle</td>
                        <td>@evt.EventDetail</td>
                        <td>@evt.EventDate</td>
                        <td>@evt.EventTime</td>
                        <td>@evt.EventLocation</td>
 
                        <td>@Html.ActionLink("แก้ไข", "EditEvent", new { evt.EventID })
                        </td>
       
                        <td>@using (Html.BeginForm("DeleteDhammaQA", "Admin"))
                            { 
                            @Html.Hidden("EventID", evt.EventID)
                            <input type="submit" value="ลบ" />                
                            }
                        </td>
                    }
                </tr>
            }

        </table>
        <p>
        </p>
    </div>
}
else { }