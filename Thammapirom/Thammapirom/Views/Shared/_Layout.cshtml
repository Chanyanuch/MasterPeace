<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/slider")
    @Scripts.Render("~/bundles/gallery")
    <link href="~/Content/bootstrap.css" rel="stylesheet">
<link href="~/Content/jquery.bxslider.css" rel="stylesheet" />
    
    

    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        li.dropdown:hover > ul.dropdown-menu {
            display: block;
            background-color: #291408;
            padding-right: 30px;
        }

        li.dropdown > li:hover {
            background-color: #fff;
        }
        #linkAddImage {
            background: none repeat scroll 0 0 green;
            border-radius: 9px;
            color: white;
            padding: 4px 7px;
        }
    </style>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="logobar">
                <p class="site-title">
                    <img src="../Images/logowat.png" />
                </p>
            </div>
            <div class="menubar">

                <nav>
                    <ul id="menu">
                        <li>
                            <img src="../Images/flowerLeft.png" width="70" />&nbsp;&nbsp;@Html.ActionLink("หน้าแรก", "Index", "Home")</li>
                        <li>@Html.ActionLink("ประวัติ", "Background", "Home")</li>
                        <li>@Html.ActionLink("ข่าวสาร-กิจกรรม", "NewsActivities", "Home")</li>
                        <li>@Html.ActionLink("สาระธรรม", "DhammaContent", "Home")</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">สมาชิก <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (Request.IsAuthenticated)
                                { 
                                    <li class="divider"></li>
                                    <li class="dropdown-header">สำหรับสมาชิก</li>
                                    <li>@Html.ActionLink("ถาม-ตอบธรรมะ", "DhammaQA", "Home")</li>
                                    <li>@Html.ActionLink("แกลอรี่", "Gallery", "Home")</li>
                                    <li>@Html.ActionLink("วิดีโอกิจกรรม", "ActivityClip", "Home")</li>
                                    <li>@Html.ActionLink("อินเตอร์เน็ตทีวี", "InternetTV", "Home")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("ลงชื่อเข้าใช้", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>  
                                    <li>@Html.ActionLink("สมัครสมาชิก", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>                          				
                                  
                                    <li class="divider"></li>
                                    <li class="dropdown-header">สำหรับสมาชิก</li>
                                    <li>@Html.ActionLink("ถาม-ตอบธรรมะ", "DhammaQA", "Home")</li>
                                    <li>@Html.ActionLink("แกลอรี่", "Gallery", "Home")</li>
                                    <li>@Html.ActionLink("วิดีโอกิจกรรม", "ActivityClip", "Home")</li>
                                    <li>@Html.ActionLink("อินเตอร์เน็ตทีวี", "InternetTV", "Home")</li>
                                }
                            </ul>
                        </li>

                        <li>@Html.ActionLink("แผนที่", "Map", "Home")</li>
                        <li>@Html.ActionLink("ติดต่อวัด", "Contact", "Home")&nbsp;&nbsp;<img src="../Images/flowerRight.png" width="70" /></li>

                    </ul>

                </nav>
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
           

            @RenderSection("scripts", required: false)
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Wat Pha Thammapirom Web Application</p>
            </div>
        </div>
    </footer>



</body>
</html>
